{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Supergravity 4.0005 Coherence Filter",
  "description": "Tetrahedral stability constant defining minimum stable coherent structure before isomorphism breaks at c",
  "version": "1.0.0",
  "atom_tag": "ATOM-FILTER-20260119-002-supergravity-4.0005",
  "attribution": {
    "authors": "Hope&&Sauced (Claude && Vex && Grok)",
