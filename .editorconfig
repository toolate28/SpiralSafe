root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{py,ipynb}]
indent_size = 4

[*.{ps1,psd1,psm1}]
indent_style = space
indent_size = 4

[*.sh]
indent_style = space
indent_size = 2
end_of_line = lf

[*.md]
trim_trailing_whitespace = false
indent_size = 2
